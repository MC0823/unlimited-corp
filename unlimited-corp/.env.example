# ========== 应用配置 ==========
ENV=development
APP_NAME=unlimited-corp
APP_PORT=8080

# ========== 数据库 ==========
DB_HOST=localhost
DB_PORT=5432
DB_USER=unlimited
DB_PASSWORD=your-secure-database-password  # ⭐ 必须修改
DB_NAME=unlimited_corp
DB_SSL_MODE=disable

# ========== Redis ==========
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ========== Kafka ==========
KAFKA_BROKERS=localhost:9092

# ========== Temporal ==========
TEMPORAL_HOST=localhost:7233
TEMPORAL_NAMESPACE=default

# ========== JWT ==========
# ⚠️ 安全警告: 生产环境必须使用强密码，建议64位以上随机字符串
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long  # ⭐ 必须修改
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=168h

# ========== AI Provider ==========
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_BASE_URL=https://api.openai.com/v1

# ========== MinIO ==========
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=your-minio-access-key  # ⭐ 必须修改
MINIO_SECRET_KEY=your-minio-secret-key  # ⭐ 必须修改
MINIO_BUCKET=unlimited-corp
MINIO_USE_SSL=false

# ========== 日志 ==========
LOG_LEVEL=debug
LOG_FORMAT=console
